<h1>Store#index</h1>
<p>Find me in app/views/store/index.html.erb</p>

<table class="w3-table-all">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= sanitize(strip_tags(product.description)) %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= link_to 'Add To Cart', product , class:"w3-button w3-light-blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
